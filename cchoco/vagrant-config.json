{
    "version": "1.0",
    "common": {
        "cpu": "1",
        "ram": "4096",

        "provision_scripts": [
            {
                "name": "Prepare Windows",
                "path": "../shell/PrepareWindows.ps1"
            },
            {
                "name": "Configure Auto Login",
                "path": "../shell/ConfigureAutoLogin.ps1"
            },
            {
                "name": "Install Chocolatey",
                "path": "../shell/InstallChocolatey.ps1",
                "args": "-UseLocalSource"
            },
            {
                "name": "VM Provisioning",
                "path": "../shell/NotifyGuiAppsOfEnvironmentChanges.ps1"
            },
            {
                "name": "Install VM Guest Tools",
                "path": "../shell/InstallVMGuestTools.ps1"
            },
            {
                "name": "Install Standard Apps",
                "path": "../shell/InstallStandardApps.ps1"
            },
            {
                "name": "Install PowerShell Modules",
                "path": "../shell/InstallPowerShellModule.ps1",
                "args": "-Module @( @{ name='PSDesiredStateConfiguration' }, @{ name='cChoco' } )"
            }
        ],
        "folders": [
            {
                "host_path": "../resources/packages",
                "guest_path": "/packages"
            },
            {
                "host_path": "../resources/licenses",
                "guest_path": "/licenses"
            }
        ]
    },

    "machine": [
        {
            "name": "cchoco",
            "box": "StefanScherer/windows_2016",
            "guest_os": "windows"
        }
    ]
}